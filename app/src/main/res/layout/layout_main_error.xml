<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding15"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding22"
        android:paddingLeft="@dimen/padding22"
        android:paddingRight="@dimen/padding22"
        android:paddingTop="@dimen/padding22"
        >
        <TextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding33"
            android:gravity="center"
            android:paddingLeft="@dimen/padding15"
            android:paddingRight="@dimen/padding15"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18" />
    </LinearLayout>
</LinearLayout>